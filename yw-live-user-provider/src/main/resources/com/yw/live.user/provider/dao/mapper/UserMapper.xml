<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yw.live.user.provider.dao.mapper.IUserTagMapper">
    <sql id="tableName">t_user_tag</sql>
    <update id="addUserTag">
        update <include refid="tableName"/>
        <set>
            <if test="tag != null and tag > 0 and filedName != null">${filedName} = ${filedName} | #{tag}</if>
        </set>
        <where>
            user_id = #{userId}
        </where>
    </update>

    <update id="deleteUserTag">
        update <include refid="tableName"/>
        <set>
            <if test="tag != null and tag > 0 and filedName != null">${filedName} = ${filedName} &amp;~ #{tag}</if>
        </set>
        <where>
            user_id = #{userId}
        </where>
    </update>
</mapper>